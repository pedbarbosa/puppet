# collectd configuration for server
Hostname "<%= @hostname -%>"

# Enabled plugins without special configuration
LoadPlugin cpu
LoadPlugin entropy
LoadPlugin irq
LoadPlugin load
LoadPlugin memory
LoadPlugin network
LoadPlugin processes
LoadPlugin sensors
LoadPlugin swap
LoadPlugin syslog

<%- if @uniqueid == 'a8c00202' -%>
# Specific plugins for collectd server
LoadPlugin dns
LoadPlugin hddtemp

<Plugin network>
  Listen "0.0.0.0" "25826"
</Plugin>

# Other plugins with customised configuration
Include "/etc/collectd.d/*.conf"
<%- else -%>
LoadPlugin interface

<Plugin network>
  Server "192.168.2.2" "25826"
</Plugin>

# Other plugins with customised configuration
Include "/etc/collectd/collectd.d/*.conf"
<%- end -%>
